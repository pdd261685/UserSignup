@{
}
<h1>User Signup </h1>
<p class="btn-danger">@ViewBag.error</p>
<form method="post">
    <div class="form-group">
        <label>Username</label><br />
        <input class="form-control" type="text" name="userName" value="@ViewBag.UserName"/>
    </div>
   
    <div class="form-group">
        <label>Email</label><br />
        <input class="form-control" type="email" name="email" value="@ViewBag.Email" />
    </div>
   
    <div class="form-group">
        <label>Password</label><br />
        <input class="form-control" type="password" name="password" />
        @if (!(ViewBag.error1 == null))
        {
            <p class="btn-danger">@ViewBag.error1</p>
        }
    </div>
    <div class="form-group">
        <label>Verify Password</label><br />
        <input class="form-control" type="password" name="vPassword" />
        @if (!(ViewBag.error2 == null))
        {
            <p class="btn-danger">@ViewBag.error2</p>
        }
    </div>

    <input type="submit" value="Submit" />

</form>
